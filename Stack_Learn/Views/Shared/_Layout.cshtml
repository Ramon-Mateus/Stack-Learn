@using Stack_Learn.Infraestrutura
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"
          charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Css/LayAdm.css")" rel="stylesheet"/>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="page-header">
                <figure>
                    <img src="~/img/logo2.svg" />
                </figure>
                <div style="text-align:right;">
                    <figure>
                        <img src="~/img/admfoto.svg" class="user" />
                    </figure>
                    @{
                        if (Html.GetAuthenticatedUser().ToString() != "")
                        {
                            @Html.GetAuthenticatedUser();
                            @Html.ActionLink(" - Sair", "Logout", "Account")
                        }
                        else
                        {
                            @Html.ActionLink("Acessar", "Login", "Account", new { area = "Seguranca" }, null);

                        }
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <ul class="nav nav-pills btn-white300">
                    <li id="liHome" role="presentation"> @Html.ActionLink("Home", "PaginaInicial", "Home", new { Area = "" }, null)</li>
                    <li id="liCursos" role="presentation">@Html.ActionLink("Cursos", "Index", "Cursos", new { Area = "" }, null)</li>
                    <li id="liAlunos" role="presentation">@Html.ActionLink("Alunos", "Index", "Alunos", new { Area = "" }, null)</li>
                    <li id="liProfessores" role="presentation">@Html.ActionLink("Professores", "Index", "Professores", new { Area = "" }, null)</li>
                    <li id="liCategorias" role="presentation">@Html.ActionLink("Categorias", "Index", "Categorias", new { Area = "" }, null)</li>
                    <li id="liAulas" role="presentation">@Html.ActionLink("Aulas", "Index", "Aulas", new { Area = "" }, null)</li>
                    <li id="liPedidos" role="presentation">@Html.ActionLink("Pedidos", "IndexCanalha", "Pedidos", new { Area = "" }, null)</li>
                    <li id="liAvaliacoes" role="presentation">@Html.ActionLink("Avaliações", "Index", "Avaliacoes", new { area = "" }, null)</li>
                    <li id="liConclusoes" role="presentation">@Html.ActionLink("Conclusões", "Index", "Conclusoes", new { Area = "" }, null)</li>
                    <li id="liUsuarios" role="presentation">@Html.ActionLink("Usuários", "Index", "Admin", new { area = "Seguranca" }, null)</li>
                    <li id="liPapeis" role="presentation">@Html.ActionLink("Papéis", "Index", "PapelAdmin", new { area = "Seguranca" }, null)</li>
                </ul>
            </div>
            <div class="col-xs-12 col-md-12">
                <br />
                @RenderBody()
            </div>
        </div> <br />
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <small>Layout por StackLearn</small>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/scripts/jquery-1.9.1.js")"></script>
    <script src="@Url.Content("~/scripts/bootstrap.js")"></script>
    @RenderSection("styles", false)
    @RenderSection("ScriptPage", false);
</body>
</html>