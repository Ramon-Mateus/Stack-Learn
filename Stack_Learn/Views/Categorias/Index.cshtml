@model IEnumerable<Stack_Learn.Models.Categoria>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Categorias";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300&display=swap" rel="stylesheet">
    <style>

        body {
            font-family: 'Jost';
        }

        th, td {
            font-family: 'Jost';
            font-size: 20px;
            padding: 20px;
        }

        td {
            height: 40px;
        }

        .nome {
            width: 80px;
        }

        .btn {
            margin-top: 40px;
        }

        a {
            border-radius: 5px;
            text-align: center;
            padding: 10px;
            background-color: #70D7C7;
            color: black;
            text-decoration: none;
            transition-duration: 0.3s;
        }

            a:hover {
                background-color: #FFCC36;
            }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Criar nova categoria", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoriaId })
                    @Html.ActionLink("Details", "Details", new { id = item.CategoriaId })
                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoriaId })
                </td>
            </tr>
        }

    </table>
</body>
</html>
