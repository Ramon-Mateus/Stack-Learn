@model IEnumerable<Modelos.Models.Curso>
    @{
        Layout = null;
    }

    @if (@TempData["Message"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"
              charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Css/Adm.css")" rel="stylesheet" />
    </head>
    <div class="panel panel-primary">
        <div class="panel-heading">
            Relação de Cursos registrados
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Qtd_Aulas)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Preco)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Professor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categoria)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qtd_Aulas)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Preco)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Professor.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categoria.Nome)
                            </td>
                            <td class="crud">
                                @Html.ActionLink("Alterar", "Edit", new { id = item.CursoId })
                                @Html.ActionLink("Detalhes", "Details", new { id = item.CursoId })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.CursoId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer panel-info">
            @Html.ActionLink("Registrar um novo curso", "Create", null, new { @class = "btn btn-white" })
        </div>
    </div>
    @section styles{
        <link href="@Url.Content("~/content/DataTables-1.10.2/css/dataTables.bootstrap.css")" rel="stylesheet" />
    }
    @section ScriptPage{
        <script src="@Url.Content("~/scripts/DataTables-1.10.2/jquery.dataTables.js")"></script>
        <script src="@Url.Content("~/scripts/DataTables-1.10.2/dataTables.bootstrap.js")"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('.table').dataTable({ "order": [[1, "asc"]] });
                $('li').removeClass("active");
                $('#liCursos').addClass("active");
            });
        </script>
    }

