@model Modelos.Models.Curso
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Deletar Curso";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"
          charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Css/Adm.css")" rel="stylesheet" />
</head>
<div class="panel panel-primary">
    <div class="panel-heading">
        Dados do curso a ser removido
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user">
                    </i>
                </span>
                @Html.EditorFor(model => model.Nome, new
                {
                    htmlAttributes =
                new { @class = "form-control", disabled = "disabled" }
                })
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover Curso" class="btn btn-danger" />
            @Html.ActionLink("Retornar", "Index", null,
            new { @class = "btn btn-info" })
        }
    </div>
</div>
@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liCursos').addClass("active");
        });
    </script>
}
